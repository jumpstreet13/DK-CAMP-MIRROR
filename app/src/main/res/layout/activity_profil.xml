<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarInActivityProfil"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolBarSize"
        android:background="@color/white"
        android:theme="@style/ToolbarTheme"
        android:title=""
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextAppearance="@style/ToolbarTextAppearens">
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_profil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.smedialink.abakarmagomedov.dk_camp_mirror.ProfilActivity">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageViewInActivityProfil"
                android:layout_width="match_parent"
                android:layout_height="@dimen/roundedimageviewSizeInActivityProfil"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/grey"
                app:riv_corner_radius_top_left="@dimen/cornerRadius"
                app:riv_mutate_background="true"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/avatar_min_profil"
                android:layout_width="@dimen/logo_width_in_activity_profil"
                android:layout_height="@dimen/logo_height_in_activity_profil"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                app:riv_corner_radius_bottom_right="@dimen/cornerRadius"
                app:riv_mutate_background="true">
            </com.makeramen.roundedimageview.RoundedImageView>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/avatar_min_profil"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="@string/upload_nfoto"
                android:textColor="@color/black"
                android:textSize="@dimen/size_of_text_in_activity_profil"/>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/avatar_min_profil" android:layout_marginTop="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editText8"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/navin"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/size_of_text_in_activity_profil"/>
                <EditText
                    android:id="@+id/editText7"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/adresse"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/size_of_text_in_activity_profil"/>
                <EditText
                    android:id="@+id/editText6"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/postnr_by"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/size_of_text_in_activity_profil"/>
                <EditText
                    android:id="@+id/editText5"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/mobil"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/size_of_text_in_activity_profil"/>
                <EditText
                    android:id="@+id/editText4"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/e_mailUpper"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/size_of_text_in_activity_profil"/>
                <EditText
                    android:id="@+id/editText3"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/f_dselsdag"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/size_of_text_in_activity_profil"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_top_in_activity_profil"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/button7"
                    style="@style/BlueButtons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="@string/familie"/>
                <Button
                    android:id="@+id/button6"
                    style="@style/BlueButtons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/uden_b_rn"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_below="@+id/linearLayout2"
                android:layout_marginTop="10dp" android:orientation="horizontal">

                <Button
                    android:id="@+id/button8"
                    style="@style/BlueButtons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="@string/single"/>
                <Button
                    android:id="@+id/button9"
                    style="@style/BlueButtons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/senior"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout3"
                android:layout_centerHorizontal="true" android:layout_marginTop="18dp"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/mine_intereser_min_profil"
                    android:layout_width="@dimen/size_of_spinner_in_activity_profil"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/custom_spinner_layer_list_unpressed"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"/>

                <Spinner
                    android:id="@+id/mine_feriet_min_profil"
                    android:layout_width="@dimen/size_of_spinner_in_activity_profil"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_spinner_layer_list_unpressed"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/editText9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:text="@string/camping_erfaring"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_of_text_in_activity_profil"/>

                <SeekBar
                    android:id="@+id/seekBar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:max="10"
                    android:maxHeight="3dp"
                    android:progress="5"
                    android:progressDrawable="@drawable/custom_seekbar"
                    android:thumb="@drawable/thumb_custom_seek_bar"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="@string/ingen"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_of_text_in_activity_profil"/>

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/_40_r"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_of_text_in_activity_profil"/>
                </LinearLayout>

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_checkbox_background"
                    android:button="@drawable/custom_checkbox_button"
                    android:paddingLeft="15dp"
                    android:text="@string/ja_tak_send_nyheder_og_tilbud"
                    android:textSize="@dimen/size_of_text_in_activity_profil"/>
            </LinearLayout>


        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>