<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smedialink.abakarmagomedov.dk_camp_mirror.ProfilActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolBarSize"
        android:background="@color/white"
        android:id="@+id/toolBarInActivityProfil">
    </android.support.v7.widget.Toolbar>

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="@color/grey"
        app:riv_mutate_background="true"
        app:riv_corner_radius_top_left="@dimen/cornerRadius"
        android:id="@+id/imageViewInActivityProfil"
        android:layout_below="@+id/toolBarInActivityProfil"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:riv_corner_radius_bottom_right="@dimen/cornerRadius"
        android:background="@color/white"
        android:layout_below="@+id/toolBarInActivityProfil"
        android:layout_centerHorizontal="true"
        app:riv_mutate_background="true"
        android:id="@+id/frameLayout">
    </com.makeramen.roundedimageview.RoundedImageView>

    <TextView
        android:text="@string/upload_nfoto"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/frameLayout"
        android:paddingBottom="5dp"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" android:id="@+id/linearLayout">

        <EditText
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/navin"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:id="@+id/editText8"
            android:layout_weight="1"/>
        <EditText
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/adresse"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:id="@+id/editText7"
            android:layout_weight="1"/>
        <EditText
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/postnr_by"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:id="@+id/editText6"
            android:layout_weight="1"/>
        <EditText
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/mobil"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:id="@+id/editText5"
            android:layout_weight="1"/>
        <EditText
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/e_mailUpper"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:id="@+id/editText4"
            android:layout_weight="1"/>
        <EditText
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/f_dselsdag"
            android:ems="10"
            android:id="@+id/editText3" android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" android:layout_marginTop="25dp"
        android:id="@+id/linearLayout2">
        <Button
            style="@style/BlueButtons"
            android:text="@string/familie"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:layout_weight="1"/>
        <Button
            style="@style/BlueButtons"
            android:text="@string/uden_b_rn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" android:id="@+id/linearLayout3">

        <Button
            style="@style/BlueButtons"
            android:text="@string/single"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:layout_weight="1"/>
        <Button
            style="@style/BlueButtons"
            android:text="@string/senior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout3" android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp">

        <Spinner
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customspinner"
            android:spinnerMode="dropdown"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:id="@+id/spinner2"/>

        <Spinner
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customspinner"
            android:spinnerMode="dropdown"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:id="@+id/spinner"/>
    </LinearLayout>


</RelativeLayout>
</android.support.v4.widget.NestedScrollView>