<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBarInActivityDigitaItId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolBarSize"
            android:background="@color/white"
            android:theme="@style/ToolbarTheme"
            android:title=""
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextAppearance="@style/ToolbarTextAppearens">
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_digitalt_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/grey_background_for_activity_digitait"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.smedialink.abakarmagomedov.dk_camp_mirror.DigitaltIdActivity">

            <include android:id="@+id/frameLayout"
                     layout="@layout/logo_layout"
                     android:layout_width="@dimen/logo_width"
                     android:layout_height="@dimen/logo_height"
                     android:layout_alignParentTop="true"
                     android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/frameLayout"
                android:layout_marginTop="20dp" android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="DK-CAMPING:ID"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_of_the_bigger_textview_in_activitydigit"/>
                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="FORDELSKLUB"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_of_the_smallest_textview_in_activity_digitidid"/>

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="@dimen/width_of_image_in_activity_digitait_id"
                    android:layout_height="@dimen/height_of_image_in_activity_digitait_id"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_rabatter"
                    app:riv_corner_radius_bottom_right="@dimen/cornerRadius"/>

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Bent Hansen"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_of_text_in_activity_digitaItId"/>
                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Mobil 33 33 33 33"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_of_text_in_activity_digitaItId"/>
                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="bent@hansen.dk"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_of_text_in_activity_digitaItId"/>
                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="MEDLEM NR: 12-456832"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_of_text_in_activity_digitaItId"/>
                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="GYLDIG TIL: 1206-2018"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_of_text_in_activity_digitaItId"/>

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Din digitale legimation til masser af fordele\ni DK-CAMPING:ID Fordelsklubben."
                    android:textAlignment="center"
                    android:textSize="@dimen/size_of_text_in_activity_digitaItIdSmall"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</ScrollView>
