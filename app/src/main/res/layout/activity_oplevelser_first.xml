<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_oplevelser_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smedialink.abakarmagomedov.dk_camp_mirror.OplevelserActivityFirst">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolBarSize"
        android:id="@+id/toolBarInActivityOplevelserFirst"
        android:title=""
        android:background="@color/white"
        android:theme="@style/ToolbarTheme"
        app:titleTextAppearance="@style/ToolbarTextAppearens"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/background_bil_vogn"
        android:scaleType="centerCrop"
        app:riv_corner_radius_top_left="@dimen/cornerRadius"
        android:layout_weight="2"/>


    <TextView
        android:text="@string/jensens_b_fhus"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@color/black"
        android:textSize="@dimen/size_of_text_big_in_oplevesler_activity"
        android:textStyle="bold|normal"
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/textView7"
        android:layout_weight="0.5"/>

    <TextView
        android:text="@string/ria_sus_dolorest_eratibu_stiatur_aut_ad_nquae_nonsequae_corit_et_quatis_ad_quinda_si_bl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:gravity="center|top"
        android:textColor="@color/black"
        android:textSize="@dimen/size_of_text_big_in_oplevesler_activity"
        android:id="@+id/textView8"
        android:layout_weight="0.5"/>


    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/background_bil_vogn"
        android:scaleType="centerCrop"
        app:riv_corner_radius_top_left="@dimen/cornerRadius"
        android:layout_weight="2"/>

    <TextView
        android:text="@string/f_rup_sommerland"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@color/black"
        android:textSize="@dimen/size_of_text_big_in_oplevesler_activity"
        android:textStyle="bold|normal"
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/textView9"
        android:layout_weight="0.5"/>

    <TextView
        android:text="@string/ria_sus_dolorest_eratibad_quae_nonsequae_corit_net_quat_omnis_ad_qui_audanda_si_bl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@color/black"
        android:textSize="@dimen/size_of_text_big_in_oplevesler_activity"
        android:gravity="center_horizontal"
        android:id="@+id/textView10"
        android:layout_weight="0.5"/>
    


</LinearLayout>
