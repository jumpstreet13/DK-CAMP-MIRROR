<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid
                android:color="#88000000" />
            <corners android:radius="13dp" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <stroke
                android:width="2dp"
                android:color="@color/grey" />
        </shape>
    </item>
    <item>
        <bitmap android:src="@drawable/ic_action_name" android:gravity="right"/>
    </item>

</layer-list>