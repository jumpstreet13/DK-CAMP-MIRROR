<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorSecondary">@color/blue</item>
        <item name="android:textColorPrimary">@color/blue</item>
        <item name="actionMenuTextColor">@color/blue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ToolbarTextAppearens" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ButtonsInHowedMenu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/howed_menu_item_pressed</item>
        <item name="android:textSize">@dimen/size_of_text</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:lineSpacingExtra">-20dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="ButtonsInFordele" parent="ButtonsInHowedMenu">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BlueButtons" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/blue_button_pressed</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_of_text_in_activity_profil</item>
        <item name="android:textStyle">bold|normal</item>
    </style>

    <style name="EditTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/border_for_edittext</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="BlueText">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold|normal</item>
    </style>


</resources>
